<div class="col-md-3 mb-2">
    <a href="#">
        <div class="card">
            <img class="img-thumbnail" src="@Product.ImageURL">
            <div class="card-body">
                <h5 class="card-title mb-3">@Product.Name</h5>
                <p class="card-text">
                    <b>@Product.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</b>
                </p>
            </div>
        </div>
    </a>
</div>
